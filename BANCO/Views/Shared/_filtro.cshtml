<form class="row g-3" method="get" action="@Url.Action("MovimientosPorCuenta")">
    <div class="col-md-3">
        <label class="form-label">Desde</label>
        <input type="date" class="form-control" name="fechaDesde" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Hasta</label>
        <input type="date" class="form-control" name="fechaHasta" />
    </div>
    <div class="col-md-3" style="text-align: center;">
        <br />
        <input type="hidden" name="idCuenta" value="@ViewBag.SelectedCuenta.Id" />
        <button type="submit" class="btn btn-primary">Buscar</button>
        <br> <br>
    </div>
    <br /> <br />
</form>

